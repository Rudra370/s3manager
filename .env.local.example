# S3 Manager - Local Development Environment
# Copy this file to .env.local for local development overrides
# These settings override the base .env file

# ==========================================
# Development Overrides
# ==========================================

# Enable debug mode for development
DEBUG=true

# Enable SQL query logging (helpful for debugging)
DEBUG_SQL=false

# Local database (when running PostgreSQL locally, not in Docker)
# DATABASE_URL=postgresql://s3manager:s3manager@localhost:5432/s3manager

# Local Redis (when running Redis locally, not in Docker)
# REDIS_URL=redis://localhost:6379/0
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Allow all origins for local dev
ALLOWED_ORIGINS=http://localhost:3012,http://127.0.0.1:3012,http://localhost:5173

# ==========================================
# E2E Testing (Uncomment when running E2E tests)
# ==========================================
# MinIO is used by default - no S3 credentials needed!
# Just uncomment the PostgreSQL section below and run: make test

# MinIO port (change if 9000 is already in use on your machine)
# MINIO_PORT=9000

# PostgreSQL Admin Connection (for test database management)
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_USER=s3manager
# POSTGRES_PASSWORD=s3manager
# POSTGRES_ADMIN_USER=postgres
# POSTGRES_ADMIN_PASSWORD=postgres

# Test Admin User
# TEST_ADMIN_NAME=Test Admin
# TEST_ADMIN_EMAIL=admin@example.com
# TEST_ADMIN_PASSWORD=SecurePassword123!

# Test Team Member
# TEST_TEAM_MEMBER_NAME=Team Member
# TEST_TEAM_MEMBER_EMAIL=team@example.com
# TEST_TEAM_MEMBER_PASSWORD=TeamPass123!

# MinIO storage (default - no configuration needed)
# TEST_STORAGE_NAME=MinIO Test
# TEST_STORAGE_ENDPOINT=localhost:${MINIO_PORT:-9000}
# TEST_STORAGE_ACCESS_KEY=minioadmin
# TEST_STORAGE_SECRET_KEY=minioadmin
# TEST_STORAGE_REGION=us-east-1
# TEST_STORAGE_USE_SSL=false
# TEST_STORAGE_VERIFY_SSL=false

# Real S3 Storage (optional - uncomment to use real S3 instead of MinIO)
# TEST_STORAGE_NAME=Test Storage
# TEST_STORAGE_ENDPOINT=s3.amazonaws.com
# TEST_STORAGE_ACCESS_KEY=your-access-key
# TEST_STORAGE_SECRET_KEY=your-secret-key
# TEST_STORAGE_REGION=us-east-1
# TEST_STORAGE_USE_SSL=true
# TEST_STORAGE_VERIFY_SSL=true

# Test Configuration
# TEST_APP_HEADING=S3 Manager Test
# TEST_APP_LOGO_URL=
# TEST_PROTECTED_BUCKETS=production-data,important-bucket
# TEST_BUCKET_PREFIX=e2e-test
