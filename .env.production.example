# S3 Manager - Production Environment
# Copy this file to .env.production on your production server
# These are secure defaults for production deployment

# ==========================================
# REQUIRED - Production Settings
# ==========================================

APP_ENV=production

# Port to run the application
PORT=3012

# Secret key for JWT token signing (MUST be changed!)
# Generate with: openssl rand -hex 32
SECRET_KEY=CHANGE-THIS-TO-A-SECURE-RANDOM-KEY

# Production Database URL (PostgreSQL)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://s3manager:s3manager@postgres:5432/s3manager

# Production Redis (use Docker service name or external Redis)
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# CORS Origins (restrict to your domain)
ALLOWED_ORIGINS=https://your-domain.com

# ==========================================
# Production Security Settings
# ==========================================

# NEVER enable debug in production
DEBUG=false

# NEVER enable SQL logging in production
DEBUG_SQL=false
